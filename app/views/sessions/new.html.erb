<h1 align="center">Log in</h1>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-8">
        <%= f.email_field :email, :placeholder => "Email" %></br>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-8">
        <%= f.password_field :password, :placeholder => "Password" %></br>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Login", class: 'btn btn-primary btn-lg' %></br>
        </div>
      </div>
    <% end %>
  </div>
</div>