<% provide(:title, "Messages") %>

<div id="sender-list">
  <% @messages.each do |msg| %>
    <p>
    <% if tutor_signed_in? %>
      <% student = msg.student %>
      <%= link_to "#{student.first_name} #{student.last_name}", messages_path({student_id: student.id, after_id: 0}) %>
    <% elsif student_signed_in? %>
      <% tutor = msg.tutor %>
      <%= link_to "#{tutor.name}", messages_path({tutor_id: tutor.id, after_id: 0}) %>
    <% end %>
    </p>
  <% end %>
</div>
