<h2>Sign up</h2>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <%= f.text_field :first_name, :placeholder => "First name" %>
      <%= f.text_field :last_name, :placeholder => "Last name" %>
    
      <%= f.number_field :phone, :placeholder => "Phone Number" %>
    
      <%= f.select :gender, ['Male', 'Female']%>
        
      <%= f.text_field :city, :placeholder => "City" %>
      <%= f.text_field :area, :placeholder => "Area" %>
      <%= f.text_field :zip, :placeholder => "Zip Code" %>
      <%= f.text_area :full_address, :placeholder => "Full Address" %>
      
      <%= f.label :profile_picture %>
      <%= f.file_field :profile_picture %>
      
      <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
    
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password" %>
    
      <%= f.submit "Sign up" %>
    
    <% end %>

  </div>
</div>

<%= render "students/shared/links" %>
