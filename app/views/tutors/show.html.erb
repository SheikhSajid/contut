<% provide(:title, "#{@tutor.name}") %>
<% @already_reviewed = false %>

<%= render partial: "shared/profile", locals: { user: @tutor, id: params[:id], reviews: @reviews, subjects: @subjects,  request_sent: @request_sent, request_accepted: @request_accepted, type: "tutor", already_reviewed: @already_reviewed } %>

<script>
  $(".star-rating").raty({
    path: "/assets",
    readOnly: true,
    score: function() {
      return $(this).attr("data-score");
    }
  });
</script>