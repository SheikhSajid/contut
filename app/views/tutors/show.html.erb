<div class="row">

<!------------Profile photo and info-------------->
<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
  <h2><%= "#{@tutor.fname} #{@tutor.lname}" %></h2>
  <% if logged_in? %>
    <p>email: <%= @tutor.email %></p>
    <p>Phone: <%= @tutor.phone %></p>
  <% else %>
    <p>Sign in to see contact informantion.</p>
  <% end %>
</div>

<!--------ratings from the students-------------->
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
  <p>Average rating: <div class="star-rating" data-score=<%= @avg_review %>></div></p></br></br>
  <em><%= "#{number_of_reviews}" %></em>
  <% @reviews.each do |review| %>
    <div class="star-rating" data-score=<%= review.rating %>></div>
    <p><%= review.comment %></p>
  <% end %>
  
  <% if logged_in? and session[:student_id] %>
    <p><%= link_to "Write a review", new_tutor_review_path(@tutor), class: "btn btn-primary" %></p>
  <% end %>
</div>

<!----------subjects-------------->
<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
  <h3>Subjects taught:</h3>
  <% @subjects.each do |subject| %>
    <p><%= subject.name.capitalize %>, Grade: <%= subject.grade %></p>
  <% end %>
</div>

</div>

<script>
  $(".star-rating").raty({
    path: "/assets",
    readOnly: true,
    score: function() {
      return $(this).attr("data-score");
    }
  });
</script>
