<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :fname, :placeholder => "First name" %>

  
  <%= f.text_field :lname, :placeholder => "Last name" %>
    

  
  <%= f.select :gender, ['Male', 'Female']%>
  

    
  <%= f.number_field :rate, :placeholder => "Rate" %>
  
 
  
  <%= f.number_field :phone, :placeholder => "Phone Number" %>
  

  

  <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
  

  
  <%= f.text_area :description, :placeholder => "Description" %>
  

  
  <%= f.text_field :city, :placeholder => "City" %>
  

  
  <%= f.text_field :area, :placeholder => "Area" %>
  

  
  <%= f.text_field :zip, :placeholder => "Zip Code" %>
  

  
  <%= f.text_area :full_address, :placeholder => "Full Address" %>

  
  <%= f.text_field :degree, :placeholder => "Highest degree earned" %>
  

  
  <%= f.text_field :institution, :placeholder => "Institution" %>
  

  
  <%= f.number_field :year, :placeholder => "Year" %>
  

  
  <%= f.label :profile_picture %>
  <%= f.file_field :profile_picture %>
  

  
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  

  <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password" %>


  <%= f.submit "Sign up" %>
  
<% end %>

<%= render "tutors/shared/links" %>
