<div class='row stickyfix bg-gradient-yellow'>
  <h2 class="text-center text-uppercase">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form col-md-6 col-md-offset-3" }) do |f| %>
    <%= devise_error_messages! %>
  
  
     <div class="form-group">
      <%= f.label(:name) %>
      <%= f.text_field :name, :placeholder => "Full name", class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label(:phone) %>
      <%= f.number_field :phone, :placeholder => "Phone Number", class: "form-control", required: true %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="form-group"> 
      <%= f.label(:gender) %><br>
      <%= f.label(:gender, "Male", value: "Male") %>
      <%= f.radio_button(:gender, "Male", checked: true) %>
      <%= f.label(:gender, "Female", value: "Female") %>
      <%= f.radio_button(:gender, "Female") %>
    </div>  
    
    <div class="form-group">
      <%= f.label(:city) %>
      <%= f.text_field :city, :placeholder => "City", class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label(:area) %>
      <%= f.text_field :area, :placeholder => "Area", class: "form-control", required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label(:zip) %>
      <%= f.text_field :zip, :placeholder => "Zip Code", class: "form-control", required: true %>
    </div>
   
    <div class="form-group">
      <%= f.label(:full_address) %>
      <%= f.text_area :full_address, :placeholder => "Full Address", class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label(:degree) %>
      <%= f.text_field :degree, :placeholder => "Highest degree earned", class: "form-control", required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label(:institution) %>
      <%= f.text_field :institution, :placeholder => "Institution", class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label(:year) %>
      <%= f.number_field :year, :placeholder => "Year", class: "form-control", required: true %>
    </div> 
    
    <div class="form-group">
      <%= f.label(:description) %>
      <%= f.text_area :description, :placeholder => "Description", class: "form-control"%>
    </div>
    
    <div class="form-group">
      <%= f.label(:rate) %>
      <%= f.number_field :rate, :placeholder => "Rate", class: "form-control", required: true %>
    </div>
  
    <div class = "form-group">
      <%= f.label(:email) %>
      <%= f.email_field :email, autofocus: true, :placeholder => "Email", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label(:password) %> <em>(leave blank if you don't want to change it)</em>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", class: "form-control", required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label(:password_confirmation, "Confirm Password") %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password", class: "form-control", required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label(:current_password, "Confirm Password") %> <em>(we need your current password to confirm your changes)</em>
      <%= f.password_field :current_password, autocomplete: "off", :placeholder => "Current Password", class: "form-control", required: true %>
    </div>

    <%= f.submit "Update", class: "btn btn-ghost" %>

  <% end %>

` <div class = "col-sm-9 col-sm-offset-3">
    <h3>Unregister from Contut</h3>
   
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-ghost" %></p>
  </div>
</div> 
