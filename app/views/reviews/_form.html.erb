<%= render "layouts/errors", obj: @review %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for([@tutor, @review], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-8">
        <%= f.label :rating %>
        <%= f.select :rating, [1, 2, 3, 4, 5]%></br>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8">
        <%= f.text_area :comment, :placeholder => "Comment" %></br>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Submit Review", class: 'btn btn-primary btn-lg' %></br>
        </div>
      </div>
    <% end %>
  </div>
</div>